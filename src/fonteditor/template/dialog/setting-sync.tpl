
<div class="form-group">
  <button id="setting-sync-cancel" type="button" class="btn btn-flat btn-sm btn-right">取消同步</button>
  <div class="input-group input-group-sm">
    <span class="input-group-addon">远程地址</span>
    <input data-field="url" type="text" class="form-control">
  </div>
</div>


<div class="form-inline column-2">

  <div class="form-group">
    <div class="input-group input-group-sm">
      <span class="input-group-addon">字体名称</span>
      <input data-field="name" type="text" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="input-group input-group-sm">
      <span class="input-group-addon">暂停同步</span>
      <span class="form-control">
        <input data-field="pause" type="checkbox">
      </span>
    </div>
  </div>
</div>
<div class="form-inline">
  <span>字体类型： </span>

  <div class="form-group">
    <div class="input-group input-group-sm">
      <span class="input-group-addon">woff</span>
      <span class="form-control">
        <input data-field="woff" type="checkbox" checked="checked">
      </span>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group input-group-sm">
      <span class="input-group-addon">ttf</span>
      <span class="form-control">
        <input data-field="ttf" type="checkbox">
      </span>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group input-group-sm">
      <span class="input-group-addon">svg</span>
      <span class="form-control">
        <input data-field="svg" type="checkbox">
      </span>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group input-group-sm">
      <span class="input-group-addon">eot</span>
      <span class="form-control">
        <input data-field="eot" type="checkbox">
      </span>
    </div>
  </div>
</div>
